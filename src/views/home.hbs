{{#> main}}
{{#*inline "content"}}
<!-- Row 1: Cards de Resumo -->
<div class="row">
    <!-- Total de Servidores -->
    <div class="col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title mb-2">Servidores</h5>
                        <h2 class="fw-semibold mb-0">1,234</h2>
                        <span class="text-success fw-bold">+5%</span> no último mês
                    </div>
                    <div class="bg-light-primary rounded-circle p-3">
                        <i class="ti ti-users fs-6"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total de Portarias -->
    <div class="col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title mb-2">Portarias</h5>
                        <h2 class="fw-semibold mb-0">567</h2>
                        <span class="text-danger fw-bold">-2%</span> no último mês
                    </div>
                    <div class="bg-light-warning rounded-circle p-3">
                        <i class="ti ti-file-text fs-6"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total de Reuniões -->
    <div class="col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title mb-2">Reuniões</h5>
                        <h2 class="fw-semibold mb-0">89</h2>
                        <span class="text-success fw-bold">+12%</span> no último mês
                    </div>
                    <div class="bg-light-success rounded-circle p-3">
                        <i class="ti ti-calendar fs-6"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total de Usuários -->
    <div class="col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title mb-2">Usuários</h5>
                        <h2 class="fw-semibold mb-0">45</h2>
                        <span class="text-success fw-bold">+8%</span> no último mês
                    </div>
                    <div class="bg-light-info rounded-circle p-3">
                        <i class="ti ti-user fs-6"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Row 2: Gráficos e Estatísticas -->
<div class="row mt-4">
    <!-- Gráfico de Portarias por Mês -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold">Portarias por Mês</h5>
                <div id="portariasChart"></div>
            </div>
        </div>
    </div>

    <!-- Estatísticas de Reuniões -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold">Reuniões Recentes</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Reunião de Planejamento</span>
                        <span class="badge bg-primary">15/01/2024</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Reunião de Avaliação</span>
                        <span class="badge bg-success">20/01/2024</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Reunião de Integração</span>
                        <span class="badge bg-warning">25/01/2024</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Row 3: Atividades Recentes -->
<div class="row mt-4">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold">Atividades Recentes</h5>
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">Data</th>
                                <th class="border-bottom-0">Descrição</th>
                                <th class="border-bottom-0">Responsável</th>
                                <th class="border-bottom-0">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="border-bottom-0">15/01/2024</td>
                                <td class="border-bottom-0">Portaria 001/2024 criada</td>
                                <td class="border-bottom-0">João Teixeira</td>
                                <td class="border-bottom-0">
                                    <span class="badge bg-success">Concluído</span>
                                </td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0">18/01/2024</td>
                                <td class="border-bottom-0">Reunião de Planejamento agendada</td>
                                <td class="border-bottom-0">Reinaldo Pereira</td>
                                <td class="border-bottom-0">
                                    <span class="badge bg-warning">Pendente</span>
                                </td>
                            </tr>
                            <tr>
                                <td class="border-bottom-0">20/01/2024</td>
                                <td class="border-bottom-0">Novo servidor cadastrado</td>
                                <td class="border-bottom-0">Jefferson Antonio</td>
                                <td class="border-bottom-0">
                                    <span class="badge bg-success">Concluído</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{{/inline}}
{{/main}}