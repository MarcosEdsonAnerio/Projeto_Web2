{{#> main}}
{{#*inline "content"}}
{{#if flashErrors}}
<div class='alert alert-danger'>
    {{#each flashErrors}}
    <p style="margin: 0; padding: 0;"> {{this}} </p>
    {{/each}}
</div>
{{/if}}
<div class="card w-100">
    <div class="card-body p-4">
        <div class="row">
            <div class="col col-10">
                <h5 class="card-title fw-semibold mb-4">Usuários</h5>
            </div>
            <div class="col">
                <a href="/users/novo" class="btn btn-primary">
                    <i class="ti ti-plus"></i>
                    <span>Usuário</span>
                </a>
            </div>
        </div>

        <div class="table-responsive">
            {{#unless users}}
            <h4>Nenhum usuário encontrado na base de dados!</h4>
            {{/unless}}
            {{#if users}}
            <table class="table text-nowrap mb-0 align-middle">
                <thead class="text-dark fs-4">
                    <tr>
                        <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">#</h6>
                        </th>
                        <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">Nome</h6>
                        </th>
                        <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">E-mail</h6>
                        </th>
                        <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">Cargo</h6>
                        </th>
                        <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">Opções</h6>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">{{inc @index}}</h6>
                        </td>
                        <td class="border-bottom-0">
                            <h6 class="fw-semibold mb-1">{{this.nome}}</h6>
                        </td>
                        <td class="border-bottom-0">
                            <p class="mb-0 fw-normal">{{this.email}}</p>
                        </td>
                        <td class="border-bottom-0">
                            <p class="mb-0 fw-normal">{{this.cargo}}</p>
                        </td>
                        <td class="border-bottom-0">
                            <a href="/users/{{this.id}}/atualizacao" class="btn btn-warning">
                                <i class="ti ti-pencil"></i>
                            </a>
                            <a href="/users/{{this.id}}/exclusao" class="btn btn-danger">
                                <i class="ti ti-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
        </div>
    </div>
</div>
{{/inline}}
{{/main}}