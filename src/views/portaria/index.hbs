{{#> main}}
  {{#*inline "content"}}
    <div class="card w-100">
      <div class="card-body p-4">
        <div class="row">
          <div class="col col-10">
            <h5 class="card-title fw-semibold mb-4">Portarias</h5>
          </div>
          <div class="col">
            <a href="/portarias/novo" class="btn btn-primary">
              <i class="ti ti-plus"></i>
              <span>Nova Portaria</span>
            </a>
          </div>
        </div>

        <div class="table-responsive">
          {{#unless portarias}}
            <h4>Nenhuma portaria encontrada na base de dados!</h4>
          {{/unless}}

          {{#if portarias}}
            <table class="table text-nowrap mb-0 align-middle">
              <thead class="text-dark fs-4">
                <tr>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">#</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Número</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Descrição</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Data de Emissão</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Opções</h6>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each portarias}}
                  <tr>
                    <td class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">{{inc @index}}</h6>
                    </td>
                    <td class="border-bottom-0">
                      <h6 class="fw-semibold mb-1">{{this.numero_por}}</h6>
                    </td>
                    <td class="border-bottom-0">
                      <p class="mb-0 fw-normal">{{this.descricao_por}}</p>
                    </td>
                    <td class="border-bottom-0">
                      <p class="mb-0 fw-normal">{{this.data_emissao}}</p>
                    </td>
                    <td class="border-bottom-0">
                      <a href="/portarias/{{this.id}}/atualizacao" class="btn btn-warning">
                        <i class="ti ti-pencil"></i>
                      </a>
                      <a href="/portarias/{{this.id}}/exclusao" class="btn btn-danger">
                        <i class="ti ti-trash"></i>
                      </a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          {{/if}}
        </div>
      </div>
    </div>
  {{/inline}}
{{/main}}
